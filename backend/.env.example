# Tiger Cloud Database Configuration
TIGER_SERVICE_ID=your_service_id_here
TIGER_HOST=your-service.tsdb.cloud.timescale.com
TIGER_PORT=5432
TIGER_DATABASE=tsdb
TIGER_USER=tsdbadmin
TIGER_PASSWORD=your_password_here
TIGER_SSL=true

# MCP Configuration
MCP_SERVER_NAME=tiger
MCP_TRANSPORT=stdio

# Server Configuration
PORT=3001
NODE_ENV=development

# LLM Configuration (for AI-powered code analysis)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative: Anthropic Claude (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Agent Configuration
MAX_PARALLEL_AGENTS=4
FORK_CLEANUP_ENABLED=true
FORK_TTL_HOURS=24
